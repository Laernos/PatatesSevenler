                {{ else }}
                    {{ $embed.Set "Fields" (cslice 
                            (sdict "Name" "Attachments" "Value" $val "Inline" false)
                    ) }}
                {{ end }}
            {{ end }}
        
            {{ $sugID := sendMessageRetID nil (cembed $embed) }}
